version: "3.7"
services:
  {{ container_name }}:
    image: grafana/grafana:{{ grafana_version }}
    container_name: {{ container_name }}
    volumes:
      - {{ container_volume }}:/var/lib/grafana
    ports:
      - 3000:3000
    user: {{ uid }}:{{ gid }}
    networks:
      - monitoring-network
    restart: always

networks:
  monitoring-network:
    driver: bridge
    name: monitoring-network
