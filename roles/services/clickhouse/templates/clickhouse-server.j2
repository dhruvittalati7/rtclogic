version: "3.7"
services:
  clickhouse-server:
    image: yandex/clickhouse-server:{{ clickhouse_version }}
    container_name: {{ container_name }}
    volumes:
      - {{ container_volume }}:/var/lib/clickhouse
    ulimits:
      nofile:
        soft: "262144"
        hard: "262144"
    ports:
      - 8123:8123
      - 9000:9000
    restart: always

