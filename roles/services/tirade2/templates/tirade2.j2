---
version: "3.7"
services:
  tirade2:
    image: {{ tirade_registry }}/tirade2-{{ platform_name }}:{{ tirade2_version }}
    container_name: {{ container_name }}
    volumes:
      - {{ container_volume }}:/data
      - {{ container_volume }}/conf.d:/etc/nginx/conf.d
      - {{ container_volume }}/keys:/etc/nginx/keys
      - {{ container_volume }}/nginx.conf:/etc/nginx/nginx.conf
    ports:
      - 443:443
      - 80:80
    restart: always
